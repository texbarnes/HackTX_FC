<% title 'Design - ForeverCard' %>
<% style 'register' %>
<% cardDesigns = Hash.new %>
<% cardDesigns["Eclipse"] = "http://i60.tinypic.com/2cr8xs4.jpg" %>
<% cardDesigns["Skyline"] = "http://i60.tinypic.com/2v7v6mt.jpg" %>
<% cardDesigns["Music"] = "http://i58.tinypic.com/14d0hlk.jpg" %>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">ForeverCard</a>
    </div>

  </div>
</nav>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Design ForeverCards</h1>
    </div>
  </div>
</div>

<table class="table">
  <tr>
    <th>Design</th>
    <th colspan="2">Select</th>
  </tr>
 
  <% cardDesigns.each do|name,design| %>
    <tr>
      <td><%= image_tag(design) %></td>
      <td><%=form_for :order, url: {action: "update"}, method: :patch, :html => { :class => 'col-xs-12' } do |f|%>
              <div class="form-group col-md-6">
                <%= f.check_box :processed, :class => 'form-control' %>
              </div>
              
              <div class="col-sm-12">
      <%= f.submit 'Submit', :class => 'btn btn-primary' %>
    </div>
     <% end %></td>
     
     

      
  <% end %>
</table>