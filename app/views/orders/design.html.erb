<% title 'Design - ForeverCard' %>
<% style 'register' %>
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">ForeverCard</a>
    </div>

  </div>
</nav>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Design ForeverCards</h1>
    </div>
  </div>
</div>

<div class="widthcap clearfix">
  <%= form_for :order, url: orders_path, :html => { :class => 'col-xs-12' } do |f| %>
  
      <div class="col-sm-6">
        <div class="row">
  
        <div class="form-group">
          <%= f.label :quantity %>
          <%= f.select(:quantity, { "100" => 100, "250" => 250, "500" => 500 }, {}, :class => 'form-control') %>
        </div>
        
         <div class="form-group">
            <%= f.label :quantity %>
            <%= f.select(:quantity, { %> <a href="http://tinypic.com?ref=2cr8xs4" target="_blank"><img src="http://i60.tinypic.com/2cr8xs4.jpg"></a> 
            <%= => 1}, {}, :class => 'form-control') %>
        </div>
        
        </div>
      </div>
      
      <div class="col-sm-6">
        <%= f.submit 'Submit this order', :class => 'btn btn-primary' %>
    </div>
  <% end %>

</div>