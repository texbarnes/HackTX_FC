<% title 'Order - ForeverCard' %>
<% style 'register' %>
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">ForeverCard</a>
    </div>

  </div>
</nav>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Order ForeverCards</h1>
      <p class="lead">Your ForeverCards will be there soon, just fill out this information and we'll send 'em straight to you.</p>
    </div>
  </div>
</div>

<div class="widthcap clearfix">
  <%= form_for :order, url: orders_path, :html => { :class => 'col-xs-12' } do |f| %>
    <div class="col-sm-6">

      <div class="form-group">
        <%= f.label :quantity %>
        <%= f.select(:quantity, { "100" => 100, "250" => 250, "500" => 500 }, {}, :class => 'form-control') %>
      </div>

      <div class="form-group">
        <%= f.label :paperStock %>
        <%= f.select(:paperStock, { "Matte  $" => "Matte", 
                                      "Premium Matte  $$" => "Premium Matte",
                                      "Glossy  $$" => "Glossy",
                                      "Recycled Matte  $$$" => "Recycled Matte",
                                      "Premium Glossy  $$$" => "Premium Glossy"}, {}, :class => 'form-control')%>
      </div>
      <div class="col-sm-6">
        <%= f.submit 'Submit this order', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>