<% title 'New user - ForeverCard' %>
<% style 'register' %>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Create your ForeverCard</h1>
      <p class="lead">You're almost there! To get your own digital business card, just enter in the following information.</p>
      
      <% if @user.errors.any? %>
      <p class="error-notice">Please fix the following <%= pluralize(@user.errors.count, 'error') %>:</p>
      <ul class="errors">
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="widthcap clearfix">
  <%= form_for :user, url: users_path, :html => { :class => 'col-xs-12' } do |f| %>
    <div class="col-sm-6">
      

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, :class => 'form-control' %>
      </div>
      
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :password, 'Password' %>
          <%= f.text_field :password, :class => 'form-control' %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :confirm_password, 'Confirm Password' %>
          <%= f.text_field :confirm_password, :class => 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, :class => 'form-control' %>
      </div>


    <div class="col-sm-6">
      
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :first, 'First name' %>
          <%= f.text_field :first, :class => 'form-control' %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :last, 'Last name' %>
          <%= f.text_field :last, :class => 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :org, 'Company/ Organization' %>
        <%= f.text_field :org, :class => 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :role %>
        <%= f.text_field :role, :class => 'form-control' %>
      </div>
      
    </div>

    <div class="col-sm-12">
      <%= f.submit 'Create your ForeverCard', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<div class="row footer">
  <div class="text-center copyright">&copy; 2014 Real Good Apps. All Rights Reserved.</div>
</div>