<% title("#{@user.first} #{@user.last} - ForeverCard") %>
<% style 'card.css' %>

<div class="col-xs-12">
      <% if @user.errors.any? %>
          <p class="error-notice">Please fix the following <%= pluralize(@user.errors.count, 'error') %>:</p>
          <ul class="errors">
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
      <% end %>
    </div>

<%= form_for :user, url: user_path(@user), method: :patch, :html => { :class => 'col-xs-12' } do |f| %>

    <div class="widthcap card">
      <div class="card-inner">
        <div class="card-header">
          <h1>
              <div class="form-group col-md-6">
                <%= f.label :first, 'First name' %>
                <%= f.text_field :first, :class => 'form-control' %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label :last, 'Last name' %>
                <%= f.text_field :last, :class => 'form-control' %>
              </div>
          </h1>
          <div class="lead"><%= if (@user.org == "")
                                  @user.role
                                else
                                  @user.role + " at " + @user.org
                                end %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="row aligned">
              <div class="fa fa-phone"></div>
              <div><a href="tel://<%= @user.phone %>"><%= @user.phone %></a></div>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6">
            <div class="row aligned">
            </div>

            <div class="row aligned">
              <div class="fa fa-envelope"></div>
              <div><a href="mailto:<%= @user.email %>"><%= @user.email %></a></div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 text-center bio">
            <%= @user.bio %>
          </div>
        </div>

        <div class="row social">
          <a class="fa fa-facebook" href="//facebook.com/<%= @user.facebook %>"></a>
          <a class="fa fa-twitter" href="//twitter.com/<%= @user.twitter %>"></a>
          <a class="fa fa-linkedin" href="//linkedin.com/in/<%= @user.linkedin %>"></a>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <%= f.submit 'Save your ForeverCard', :class => 'btn btn-primary' %>
    </div>
<% end %>


<div class="row footer">
  <div class="text-center copyright">&copy; 2014 Real Good Apps. All Rights Reserved.</div>
</div>