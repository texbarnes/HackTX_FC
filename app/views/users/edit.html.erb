<% title("#{@user.first} #{@user.last} - ForeverCard") %>
<% style 'card.css' %>

<div class="col-xs-12">
      <% if @user.errors.any? %>
          <p class="error-notice">Please fix the following <%= pluralize(@user.errors.count, 'error') %>:</p>
          <ul class="errors">
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
      <% end %>
    </div>

<%= form_for :user, url: user_path(@user), method: :patch, :html => { :class => 'col-xs-12' } do |f| %>

    <div class="widthcap card">
      <div class="card-inner">
        <div class="card-header">
          <h1>
              <div class="form-group col-md-6">
                <%= f.label :first, 'First name' %>
                <%= f.text_field :first, :class => 'form-control' %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label :last, 'Last name' %>
                <%= f.text_field :last, :class => 'form-control' %>
              </div>
          </h1>
          <div class="lead">
            <div class="form-group">
              <%= f.label :org, 'Organization' %>
              <%= f.text_field :org, :class => 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :role %>
              <%= f.text_field :role, :class => 'form-control' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="row aligned">
              <div class="fa fa-phone"></div>
              <div class="form-group">
                <%= f.label :phone, 'Phone number' %>
                <%= f.text_field :phone, :class => 'form-control', :placeholder => 'xxx-xxx-xxxx' %>
              </div>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6">
            <div class="row aligned">
            </div>

            <div class="row aligned">
              <div class="fa fa-envelope"></div>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, :class => 'form-control', :placeholder => 'your.email@example.com' %>
              </div>
            </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 text-center bio">
              <div class="form-group">
                <%= f.label :bio, 'Short biography' %>
                <%= f.text_field :bio, :class => 'form-control'%>
              </div>
          </div>
        </div>

        <div class="row social">
          <div class="col-sm-4">
            <div class="form-group">
              <%= f.label :facebook, 'Facebook username' %>
              <%= f.text_field :facebook, :class => 'form-control' %>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="form-group">
              <%= f.label :twitter, 'Twitter handle' %>
              <%= f.text_field :twitter, :class => 'form-control', :placeholder => '@yourhandle' %>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="form-group">
              <%= f.label :linkedin, 'LinkedIn profile ID' %>
              <%= f.text_field :linkedin, :class => 'form-control', :placeholder => '1234567890' %>
            </div>
          </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :confirm_password %>
          <%= f.password_field :confirm_password, :class => 'form-control' %>
        </div>
    </div>

    <div class="col-sm-12">
      <%= f.submit 'Save your ForeverCard', :class => 'btn btn-primary' %>
    </div>
<% end %>


<div class="row footer">
  <div class="text-center copyright">&copy; 2014 Real Good Apps. All Rights Reserved.</div>
</div>