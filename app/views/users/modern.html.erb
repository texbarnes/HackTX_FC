<% title("#{@user.first} #{@user.last} - ForeverCard") %>
<% style 'card.css' %>

<div class="widthcap card">
  <div class="card-inner">
    <div class="card-header">
      <h1><b><%= @user.first %></b> <%= @user.last %></h1>
      <div class="lead"><%= if (@user.org == "")
                               @user.role
                            else 
                              @user.role + " at " + @user.org
                            end %>
      </div>
      <p></p>
      <div class="row">
        <div class="col-xs-12 text-center bio">
          <b><%= @user.bio %></b>
        </div>
      </div>
    </div>
      
      <div class="row text-center">
        <%= if(@user.showP)
              phone_number_link(@user.phone) 
            end %>
            
        <%= if(@user.showE)
              link_to image_tag("http://i61.tinypic.com/qswi2d.png"), "mailto:" + @user.email + "?subject=&body=" + "%0D%0A" + "%0D%0A" + "%0D%0A" + "-Email provided by ForeverCard.co"
            end %>
            
        <%= if(@user.showText)
              text_link(@user.phone) 
            end %>
            
        <%= if(@user.showTwit)
             link_to image_tag("http://i58.tinypic.com/2uygnk7.png"), "http://www.twitter.com/" + @user.twitter 
            end %>
            
        <%= if(@user.showFace)
              link_to image_tag("http://i61.tinypic.com/33lcad2.png"), "http://www.facebook.com/" + @user.facebook
            end %>
            
        <%= if(@user.showLink)
              link_to image_tag("http://i60.tinypic.com/o88lzt.png"), "" + @user.linkedin
            end %>
      </div>  
      
  </div>
  
  <a class="btn btn-large btn-block btn-info" type="button" href=<% vcard_path %>><b>Download Contact</b></a>
  <p>
    
  </p>
</div>  

<div class="row footer hidden-xs">
  <div class="text-center copyright">&copy; 2014 Real Good Apps. All Rights Reserved.</div>
</div>

<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">