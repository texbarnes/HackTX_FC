<% title 'New user - ForeverCard' %>
<% style 'register' %>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Create your ForeverCard</h1>
      <p class="lead">Step 1/3: Personal</p>
      
      <% if @user.errors.any? %>
      <p class="error-notice">Please fix the following <%= pluralize(@user.errors.count, 'error') %>:</p>
      <ul class="errors">
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="widthcap clearfix">
  <%= form_for :user, url: wizard_path, :html => { :class => 'col-xs-12' }, method: :patch do |f| %>
    <div class="col-md-6">
      <h2>Account</h2>
      
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :first, 'First name' %>
          <%= f.text_field :first, :class => 'form-control' %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :last, 'Last name' %>
          <%= f.text_field :last, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, :class => 'form-control' %>
      </div>
    </div>
      

    <div class="col-md-6">
      <h2>Profile</h2>

      <div class="form-group">
        <%= f.label :org, 'Company/ Organization' %>
        <%= f.text_field :org, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :role %>
        <%= f.text_field :role, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :bio, 'Short biography' %>
        <%= f.text_area :bio, :class => 'form-control', :rows => '5' %>
      </div>
    </div>

    <div style="float:left;">
        <div class="col-xs-4">
            <a class="btn btn-primary" type="button" href=<%= root_path %>>Back: Home</a>
        </div> 
     </div>  
     
     <div style="float:right;">
         <div class="col-xs-4">
            <%= f.submit 'Next: Social', :class => 'btn btn-primary' %>
        </div>
     </div>
  <% end %>
</div>

<div class="row footer">
  <div class="text-center copyright">&copy; 2014 Real Good Apps. All Rights Reserved.</div>
</div>