<% title 'New user - ForeverCard' %>
<% style 'register' %>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Step 3/3: Display</h1>
    </div>
  </div>
</div>

<div class="widthcap clearfix">
  <%= form_for :user, url: wizard_path, :html => { :class => 'col-xs-12' }, method: :put do |f| %>
  
    <div class="form-group row">
        <div align="center">
          <h2>What information should people see?</h2>
        </div>
    </div>
  
  <%= getParams(@user) %>
    <% @pars.each do|label,attribute| %>
  
        <div class="form-group row">
            <div align="center">
                    <%= f.check_box attribute %>
                    <%= f.label label %>
            </div>
        </div>
    <% end %>
  </div>
  
   <div class="form-group row">
        <div align="center">
          <h2>What should your page look like?</h2>
        </div>
    </div>
  
  <div class = "container">
    <div class="row header widthcap">      
      <div class="row">
        <div class="col-md-6"> 
          <div align="center">
            <h3>Classic Mode</h3>
             <%= f.label :classicMode, image_tag("http://i58.tinypic.com/1z4ldvn.png") %><br>
            <%= f.radio_button :classicMode, true %>
          </div>
        </div>
        
        <div class="col-md-6"> 
          <div align="center">
            <h3>Modern Mode</h3>
            <%= f.label :classicMode, image_tag("http://i61.tinypic.com/15cknxx.png") %><br>
            <%= f.radio_button :classicMode, false %>
          </div>
        </div>
      </div>
    </div>

    <div style="float:left;">
        <div class="col-xs-4">
            <a class="btn btn-primary" type="button" href=<%= wizard_path(:social) %>>Back: Social</a>
        </div> 
     </div>  
     
     <div style="float:right;">
         <div class="col-xs-4">
            <%= f.submit 'Next: Home', :class => 'btn btn-primary' %>
        </div>
     </div>
  <% end %>
</div>

<div class="row footer">
  <div class="text-center copyright">&copy; 2014 Real Good Apps. All Rights Reserved.</div>
</div>