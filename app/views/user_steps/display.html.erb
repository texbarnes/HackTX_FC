<% title 'New user - ForeverCard' %>
<% style 'register' %>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Edit your ForeverCard</h1>
      <p class="lead">Step 3/3: What information do you want people to see?</p>
    </div>
  </div>
</div>

<div class="widthcap clearfix">
  <%= form_for :user, url: wizard_path, :html => { :class => 'col-xs-12' }, method: :put do |f| %>
  
  <%= getParams(@user) %>
    <% @pars.each do|label,attribute| %>
  
        <div class="row">
            <div class="text-center">
                <%= f.check_box attribute %>
                <%= f.label label %>
            </div>
        </div>
    <% end %>

    <div class="col-sm-12">
      <%= f.submit 'Create your ForeverCard', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<div class="row footer">
  <div class="text-center copyright">&copy; 2014 Real Good Apps. All Rights Reserved.</div>
</div>