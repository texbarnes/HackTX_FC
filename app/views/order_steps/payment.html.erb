<% title 'Order Payment - ForeverCard' %>
<% style 'register' %>

<% orderAmounts = Hash.new %>
<% orderAmounts["Matte 100"] = 15 %>
<% orderAmounts["Matte 250"] = 28 %>
<% orderAmounts["Matte 500"] = 33 %>
<% orderAmounts["Premium Matte 100"] = 15 %>
<% orderAmounts["Premium Matte 250"] = 31 %>
<% orderAmounts["Premium Matte 500"] = 50 %>
<% orderAmounts["Glossy 100"] = 15 %>
<% orderAmounts["Glossy 250"] = 31 %>
<% orderAmounts["Glossy 500"] = 52 %>
<% orderAmounts["Recycled Matte 100"] = 15 %>
<% orderAmounts["Recycled Matte 250"] = 32 %>
<% orderAmounts["Recycled Matte 500"] = 53 %>
<% orderAmounts["Premium Glossy 100"] = 15 %>
<% orderAmounts["Premium Glossy 250"] = 32 %>
<% orderAmounts["Premium Glossy 500"] = 54 %>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">ForeverCard</a>
    </div>

  </div>
</nav>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Step 3/3: Confirmation and Payment</h1>
    </div>
  </div>
</div>

<% style 'card.css' %>
    <div class="widthcap card">
      <div class="card-inner">
        <div class="row">
            <div class="text-left">
                <%= @order.quantity.to_s + " '" + @order.paperStock + "'"%> Business Cards
            </div> 
            
            <div class="text-right">
                $<%= orderAmounts[@order.paperStock + ' ' + @order.quantity.to_s] %>.00
            </div>
        </div>
        
        <div class="row">
            <div class="text-left">
                + Shipping
            </div> 
            
            <div class="text-right">
                $69.00
            </div>
        </div>
      </div>
    </div>

<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $<%= orderAmounts[@order.paperStock + ' ' + @order.quantity.to_s] %>.00 </span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="One time payment"
          data-amount="500"></script>
<% end %>

<p>
    
</p>


<div class="text-primary">
    <div class = "col">
        <div class="text-center">
            <%= image_tag("http://i57.tinypic.com/2namw5h.png")%> This payment is secure. Learn more <u><b><%=link_to 'here', 'https://stripe.com/help/security', :target => "_blank" %> </b></u>
        </div>
    </div>
</div>

<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">