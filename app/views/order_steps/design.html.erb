<% title 'Design - ForeverCard' %>
<% style 'register' %>
<% cardDesigns = Hash.new %>
<% cardDesigns["Eclipse"] = "http://i57.tinypic.com/69eybk.jpg" %>
<% cardDesigns["Skyline"] = "http://i57.tinypic.com/69eybk.jpg" %>
<% cardDesigns["Music"] = "http://i57.tinypic.com/69eybk.jpg" %>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">ForeverCard</a>
    </div>

  </div>
</nav>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1>Step 1/3: Design</h1>
    </div>
  </div>
</div>

<%= form_for :order , url: wizard_path(:design, :order_id => @order.id), method: :put , :html => { :multipart => true } do |f| %>
    <div class="row">
        <% cardDesigns.each do|name,design| %>
            <div style="float:left;">
                <%= f.radio_button :design, :value => design %>
                <%= f.label :design, image_tag(design) %>
            </div>
        <% end %>
    </div>
    
    <div style="float:left;">
        <a class="btn btn-primary" type="button" href=<%= root_path %>>Cancel This Order</a>
     </div>  
     <div style="float:right;">
        <%= f.submit 'Next: Order Details', :class => 'btn btn-primary' %> 
     </div>
<% end %>

<p>
                  
</p>

<p>
  ----------OR----------               
</p>

<%= form_for :order , url: wizard_path, method: :put , :html => { :multipart => true } do |f| %>
    <p>
      Upload a design
    </p>
    <div class="widthcap clearfix">
        <div class="form-group col-md-6">
            <div class="row">
                <%= f.file_field :image %> 
                <p>
                  
                </p>
                <%= f.submit 'Continue', :class => 'btn btn-primary' %>
            </div>
        </div>
    </div>
<% end %>