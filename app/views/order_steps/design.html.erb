<% title 'Design - ForeverCard' %>
<% style 'register' %>
<% cardDesigns = Hash.new %>
<% cardDesigns["Eclipse"] = "http://i57.tinypic.com/69eybk.jpg" %>
<% cardDesigns["Skyline"] = "http://i57.tinypic.com/69eybk.jpg" %>
<% cardDesigns["Music"] = "http://i57.tinypic.com/69eybk.jpg" %>
<% cardDesigns["Random1"] = "http://i57.tinypic.com/69eybk.jpg" %>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">ForeverCard</a>
    </div>

  </div>
</nav>

<div class="row">
    <div class="text-center">
        <h1>Step 1/3: Design</h1>
    </div> 
</div>

<div class="row header widthcap">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <h1></h1>
    </div>
  </div>
</div>

<div class="container">
    <%= form_for :order , url: wizard_path(:design, :order_id => @order.id), method: :put , :html => { :multipart => true } do |f| %>
        <div class="row">
            <% cardDesigns.each do|name,design| %>
                <div class="col-md-3">
                    <div class="text-center">
                        <%= f.radio_button :design, :value => design %>
                        <%= f.label :design, image_tag(design) %>
                    </div>
                </div>
            <% end %>
        </div>
        
        <div class="row">
        </div>
        
        <div class="row">
            <% cardDesigns.each do|name,design| %>
                <div class="col-md-3">
                    <div class="text-center">
                        <%= f.radio_button :design, :value => design %>
                        <%= f.label :design, image_tag(design) %>
                    </div>    
                </div>
            <% end %>
        </div>
        <p>
  ----------OR----------               
        </p>
        <div class="row">
            <div class= "col-md-6">
                <%= f.file_field :image %> 
            </div>
        </div>
    
        <div style="float:left;">
            <a class="btn btn-primary" type="button" href=<%= root_path %>>Back: Cancel Order</a>
         </div>  
         <div style="float:right;">
            <%= f.submit 'Next: Order Details', :class => 'btn btn-primary' %> 
         </div>
    <% end %>
</div>