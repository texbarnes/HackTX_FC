<%= form_for :order , url: {action: "update"}, :html => { :multipart => true } do |f| %>
    <p>
      Upload a design
    </p>
    <div class="widthcap clearfix">
        <div class="form-group col-md-6">
            <div class="row">
                <%= f.file_field :image %> 
                <p>
                  
